<!-- /templates/customers/activate_account.liquid -->

<div class="outer mt2">

    <div id="login_form" class="account-entry-form mha">
        <h1 class="h3 mb05">Activate Your Account</h1>

        {% form 'activate_customer_password', class: 'mha' %}

            {{ form.errors | default_errors }}

            {% include 'input-text', label: 'Confirm', name: 'customer[password]', type: 'password' %}

            {% include 'input-text', label: 'Confirm', name: 'customer[password_confirmation]', type: 'password' %}

            <div class="mt2">
                <button type="submit" class="button">Activate</button>
                <button type="submit" name="decline" class="link ml1">Cancel</button>
            </div>

        {% endform %}

    </div>
</div>
